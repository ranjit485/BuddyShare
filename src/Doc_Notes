-------------------- USING ARRAY AND HTML CSS ----------------------------

        String[] css = {
                "margin:0px;",
                "padding:100%;",
                "width:3px;height:15px;margin:2px;" +
                        "color:white;" +
                        "text-align:center;border:none;"
        };

        String tabStyle = css[0] + css[1] + css[2];
        String html1 = "<html><body style = '" + tabStyle + "'>";
        String html2 = "</body></html>";

